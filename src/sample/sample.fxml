<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text = "I'm Thinking of a number between"
           GridPane.rowIndex="0"
           ></Label>
    <Label text = "1 - 10,000"
           GridPane.rowIndex="1"
           ></Label>
    <Label text = "Guess my number to win!"
           GridPane.rowIndex="2"
           ></Label>
    <TextField text = ""
               fx:id="guessField"
               GridPane.rowIndex="3"
               ></TextField>
    <Button text = "Submit"
            fx:id="submitButton"
            onAction="#clicksubmit"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"
            ></Button>
    <Text text = ""
               fx:id="highlow"
               GridPane.rowIndex="4"
               ></Text>
    <Text text = ""
          fx:id="range"
          GridPane.rowIndex="5"
          ></Text>
    <Button text = "New Game"
            fx:id="newgame"
            onAction="#clicknewgame"
            GridPane.rowIndex="6"
            GridPane.columnIndex="0"
            ></Button>
    <Button text = "End Game"
            fx:id="endgame"
            onAction="#clickend"
            GridPane.rowIndex="6"
            GridPane.columnIndex="1"
            ></Button>
    <Text text="######"
          fx:id="showsecret"
          GridPane.rowIndex="7"
          ></Text>

</GridPane>